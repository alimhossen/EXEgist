<% @paperArray.each_with_index do |sentence, index| %>
	<%= '<a href="#" class="sentence" id="' + index.to_s + '">' + sentence + ".</a>" 
	%>
	<% asterisk_added = false %>
	<% for comment in @all_comments %>
	
		<% if comment.sentence_id == index %>
			<% if !asterisk_added %>
				<a href="#" class="marker">*</a>
				<% asterisk_added = true %>
			<% end %>
			
			<span class="comment <%= comment.sentence_id %>" id="<%= comment.id %>" style="display:none;"><%= comment.comment %></span>
		<% end %>
	<% end %>	
		
	
<% end %>


	




