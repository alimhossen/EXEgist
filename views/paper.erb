<% @paperArray.each_with_index do |sentence, index| %>
	<%= '<a href="#" class="sentence" id="' + index.to_s + '">' + sentence + ".</a>" %>
	<% for testcomment in @all_comments do %>
	
		<% if index == testcomment.sentence_id %>
			<span class="comment"><%= testcomment.comment %></span>
		<% end %>
	
	<% end %>
	
<% end %>


